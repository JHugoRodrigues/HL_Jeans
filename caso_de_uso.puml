@startuml HL_Jeans
left to right direction
skinparam packageStyle rectangle
skinparam actorStyle awesome
skinparam shadowing false
skinparam usecase {
  BackgroundColor #EFEFEF
  BorderColor #2D3E50
  ArrowColor #2D3E50
}

actor "Cliente" as Cliente
actor "Administrador" as Admin

rectangle "HL Jeans - Sistema de Vendas Online" {
    
    (Cadastrar-se) as Cadastrar
    (Fazer login) as Login
    (Pesquisar produtos) as Pesquisar
    (Adicionar produto ao carrinho) as AdicionarCarrinho
    (Remover produto do carrinho) as RemoverCarrinho
    (Visualizar carrinho) as VerCarrinho
    (Finalizar compra) as FinalizarCompra
