package model;

public class Produto {
    private String nome;
    private int qtdEstoque;
    private double preco;

    public Produto(String nome, int qtdEstoque, double preco) {
        this.nome = nome;
        this.qtdEstoque = qtdEstoque;
        this.preco = preco;
    }

    public boolean verificarDisponibilidade(int qtdPedido) {
        return this.qtdEstoque >= qtdPedido;
    }

    public void darBaixa(int qtdComprada) {
        this.qtdEstoque -= qtdComprada;
    }

    public String getNome() {
        return nome;
    }

    public int getQtdEstoque() {
        return qtdEstoque;
    }

    public double getPreco() {
        return preco;
    }

    public void setQtdEstoque(int qtdEstoque) {
        this.qtdEstoque = qtdEstoque;
    }
}
